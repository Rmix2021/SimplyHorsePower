@page "{id?}"
@model SimplyHorsePower.Pages.Categories.AddCategoryModel
@using SimplyHorsePower.Models
@using SimplyHorsePower.Data
@{
    ViewData["Title"] = "Add Category";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post" asp-page-handler="Submit">
        <label>Category Name:</label>
        <input type="text" value="Category to Add" asp-for="@Model.Input.CategoryName">
        <input type="submit" value="Submit" class="text-success">
    </form>
</div>


